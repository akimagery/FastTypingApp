
<div class="card w-80">
<h2>Упражнения пользователей</h2>
    <h3>Всего упражнений пройдено пользователями: @ViewBag.ExercisesNum</h3>
<div style="overflow-x:auto;">
<table class="table">
    <tr>
        <th>Пользователь</th>
        <th>Упражнение</th>
        <th>Уровень</th>
        <th>Допустимое число ошибок</th>
        <th>Допустимое максимальное время</th>
        <th>Число ошибок</th>
        <th>Точность</th>
        <th>Время</th>
        <th>Пройдено</th>
        <th></th>
    </tr>
        @foreach (var item in ViewBag.UserExercises)
    {
        <tr>
            <td>@item.User.Name</td>
            <td>@item.Exercise.Name</td>
            <td>@item.Exercise.Level</td>
            <td>@item.Exercise.ErrorNum</td>
            <td>@item.Exercise.MaxTime</td>
            <td>@item.ErrorNum</td>
            <td>@item.Accuracy %</td>
            <td>@item.Time сек.</td>
            @if (item.Succefull == true)
            {
                <td>Да</td>
            }
            else
            {
                <td>Нет</td>
            }
            <td>
                <form asp-controller="UserExerciseAdmin" asp-action="Delete" method="post" asp-route-id="@item.Id">
                        <input class="button_small" type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>
</div>
</div>
