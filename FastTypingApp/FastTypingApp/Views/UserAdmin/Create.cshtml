@model FastTypingApp.Models.User
<div class="card w-60">
<h2>Добавление пользователя</h2>
<form asp-action="create" asp-controller="useradmin">
    <p>
        <label asp-for="Name">Логин</label><br />
        <input type="text" asp-for="Name" />
    </p>
    <p>
        <label asp-for="Password">Пароль</label><br />
        <input type="text" asp-for="Password" />
    </p>
    <p>
        <label asp-for="IsAdmin">Права администратора</label><br />
        <input type="checkbox" asp-for="IsAdmin" />
    </p>
    <p>
        <input class="button" type="submit" value="Сохранить" />
    </p>
</form>
</div>
